{
  "compilerOptions": {
    "lib": ["dom", "es6"],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "es6",
    "allowImportingTsExtensions": true
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
